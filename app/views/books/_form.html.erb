<%= form_with model: book do |form| %>
    <div>
        <%= form.label :title %><br>
        <%= form.text_field :title %>
        <% book.errors.full_messages_for(:title).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.label :description %><br>
        <%= form.text_area :description %>
        <% book.errors.full_messages_for(:description).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.label :year %><br>
        <%= form.text_field :year %>
        <% book.errors.full_messages_for(:year).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.label :old %><br>
        <%= form.check_box :old, as: :boolean %>
        <% book.errors.full_messages_for(:old).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.label :archived %><br>
        <%= form.check_box :archived, as: :boolean %>
        <% book.errors.full_messages_for(:archived).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.submit %>
    </div>
<% end %>